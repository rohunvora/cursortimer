[flake8]
max-line-length = 100
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    vscode-extension,
    htmlcov
ignore = 
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator (conflicts with black)
    E203,  # whitespace before ':' (conflicts with black)
per-file-ignores =
    __init__.py: F401
    tests/*: F401,F811